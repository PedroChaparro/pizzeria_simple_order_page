<%- include('./partials/__navbar.ejs') %>

<main>
    <section class="container">
        <!--A la izquierda se muestra el listado de ordenes y a la derecha el formulario para crear una nueva orden-->
        <h1 class="grid__title">ORDER SUMARY</h1>

        <div class="form-container-alone">
            <div class="form__card">
                <form action="/update/<%= data.id %>" method="post">
                    <div class="form__group">
                        <label for="customer_name">Fullname</label>
                        <input type="text" name="customer_name" id="" value="<%= data.customer_name %>"/>
                    </div>

                    <div class="form__group">
                        <label for="customer_address">Address</label>
                        <input type="text" name="customer_address" id="" value="<%= data.customer_address %>"/>
                    </div>
                    <div class="form__group">
                        <label for="customer_phone">Phone number</label>
                        <input type="number" name="customer_phone" id="" value="<%= data.customer_phone %>"/>
                    </div>
                    <div class="form__group">
                        <label for="product">Select your pizza: </label>
                        <select name="product" id="">
                            <!--Se agrega como seleccionada la opción que está guardada en la BD-->
                            <option value="<%= data.product %>" selected> <%= data.product %> </option>
                            <option value="Classic pizza">Classic Pizza</option>
                            <option value="Extra Cheese pizza">Extra Cheese Pizza</option>
                            <option value="Vegetarian pizza">Vegetarian Pizza</option>
                            <option value="Hawaiian pizza">Hawaiian Pizza</option>
                            <option value="Bacon pizza">Bacon Pizza</option>
                        </select>
                    </div>
                    <div class="form__group">
                        <label for="customer_comments">Extra comments: </label>
                        <textarea name="customer_comments" id="comments" wrap="soft"><%= data.customer_comments %></textarea>
                    </div>

                    <button type="submit" class="btn btn--primary">APPLY CHANGES</button>
                </form>
            </div>
        </div>
    </section>
</main>

<%- include('./partials/__footer.ejs') %>