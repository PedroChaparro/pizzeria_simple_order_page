<%- include('./partials/__navbar.ejs') %>

<main>
    <section class="container grid-12columns">
        <!--A la izquierda se muestra el listado de ordenes y a la derecha el formulario para crear una nueva orden-->
        <h1 class="grid__title">ORDER SUMARY</h1>

        <div class="table-container">
            <table class="orders">
                <thead>
                    <tr>
                        <td>ORDER ID</td>
                        <td>CLIENT NAME</td>
                        <td>CLIENT ADDRESS</td>
                        <td>CLIENT PHONE</td>
                        <td>PIZZA TYPE</td>
                        <td>CLIENT COMMENTS</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>0</td>
                        <td>Test name</td>
                        <td>Test address</td>
                        <td>Test phone</td>
                        <td>Test pizza</td>
                        <td>No comments here</td>
                    </tr>
                    <tr>
                        <td>0</td>
                        <td>Test name</td>
                        <td>Test address</td>
                        <td>Test phone</td>
                        <td>Test pizza</td>
                        <td>No comments here</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="form-container">
            <div class="form__card">
                <form action="">
                    <div class="form__group">
                        <label for="fullname">Fullname</label>
                        <input type="text" name="fullname" id="" placeholder="Kaidan Stevens" />
                    </div>

                    <div class="form__group">
                        <label for="address">Address</label>
                        <input type="text" name="address" id="" placeholder="Cll 1C #420-980 Arizona" />
                    </div>
                    <div class="form__group">
                        <label for="phone">Phone number</label>
                        <input type="number" name="phone" id="" placeholder="3224728523" />
                    </div>
                    <div class="form__group">
                        <label for="pizza">Select your pizza: </label>
                        <select name="pizza" id="">
                            <option value="Classic pizza" selected>Classic Pizza</option>
                            <option value="Extra Cheese pizza" selected>Extra Cheese Pizza</option>
                            <option value="Vegetarian pizza" selected>Vegetarian Pizza</option>
                            <option value="Hawaiian pizza" selected>Hawaiian Pizza</option>
                            <option value="Bacon pizza" selected>Bacon Pizza</option>
                        </select>
                    </div>
                    <div class="form__group">
                        <label for="comments">Extra comments: </label>
                        <textarea name="comments" id="comments" wrap="soft"></textarea>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>

